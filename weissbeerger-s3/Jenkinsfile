pipeline{
    agent any
    environment{
        TF_WORKSPACE = ${workspace}
        TF_IN_AUTOMATION = 'true'
        TERRAFORM_HOME = 'weissbeerger-s3'
    }
    stages{
        stage('TF init'){
            steps{
                withAWS(){
                    sh '${TERRAFORM_HOME}/terraform init'
                }
            }
        }

        stage('TF apply'){
            steps{
                sh '${TERRAFORM_HOME}/terraform apply -var-file="${vars_file}"'
            }
        }
    }
}