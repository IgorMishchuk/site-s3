pipeline{
    agent any
    environment{
        TF_WORKSPACE = "${BRANCH_NAME}"
        TF_IN_AUTOMATION = 'true'
    }
    stages{
        stage('TF init: non-Prod'){
            when{ not {branch 'master'} }
            steps{
                withAWS(){
                    sh 'cd weissbeerger-s3 && terraform init'
                }
            }
        }

        stage('TF init: Prod'){
            when{branch 'master'}
            environment{
                TF_WORKSPACE = 'prod'
            }
            steps{
                withAWS(){
                    sh 'cd weissbeerger-s3 && terraform init'
                }
            }
        }

        stage('TF apply: non-Prod'){
            when{ not {branch 'master'} }
            steps{
                sh 'cd weissbeerger-s3 && terraform apply -auto-approve -var-file="vars_${BRANCH_NAME}.tfvars"'
            }
        }

        stage('TF apply: Prod'){
            when{branch 'master'}
            steps{
                sh 'cd weissbeerger-s3 && terraform apply -auto-approve -var-file=vars_prod.tfvars'
            }
        }
    }
}